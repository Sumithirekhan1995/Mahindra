<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CancelledReasonMandatory</fullName>
    <active>true</active>
    <description>If status is Cancelled, then Cancelled Reason field is mandatory.</description>
    <errorConditionFormula>AND( ISPICKVAL( Status__c , &apos;Cancelled&apos;),  ISPICKVAL( Cancelled_Reason__c , &apos;&apos;)  )</errorConditionFormula>
    <errorMessage>Specify the Cancelled Reason.</errorMessage>
</ValidationRule>
