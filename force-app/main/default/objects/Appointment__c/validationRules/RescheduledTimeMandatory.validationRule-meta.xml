<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RescheduledTimeMandatory</fullName>
    <active>true</active>
    <description>If status is Rescheduled, Reschedule Time is mandatory</description>
    <errorConditionFormula>AND( ISPICKVAL( Status__c , &apos;Rescheduled&apos;),  ISBLANK( Rescheduled_Time__c )  )</errorConditionFormula>
    <errorMessage>Specify Rescheduled time.</errorMessage>
</ValidationRule>
